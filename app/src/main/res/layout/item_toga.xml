<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#7283DD"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci_photo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:src="@color/colorGrey"/>

        <TextView
            android:id="@+id/tx_judultoga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judul_toga"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tx_detailtoga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/tx_judultoga"
            android:text="@string/detail_toga"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="3"
            android:ellipsize="end"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>